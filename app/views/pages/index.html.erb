<h3>Главная страница</h3>

<%= form_for :main_form, url: pages_path do |f| %>
  <p>
    Чтобы узнать вес пользователя, введите ID его медицинской карты:<br>
    <%= f.text_field :user_id, :id => "user_id", :size => "30" %>
  </p>

  <font color="red" id="wrong_id">
    <%= @wrong_id %>
  </font>

  <p>
    <%= f.submit "Поиск", :id => "submit_btn" %>
  </p>
<% end %>

<script type="text/javascript">
  $('#submit_btn').click(function() {
    $('#wrong_id').text("")
  })
</script>